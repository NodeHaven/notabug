        "--peer",
        "http://localhost:3333/gun",
        "--disableValidation",
        "--redis",
        "--leech",
        "--comments"
      ]
    },
    {
      "name": "tabulator",
      "exec_mode": "cluster",
      "instances": 1,
      "script": "./server.js",
      "env": { "NODE_ENV": "production" },
      "args": [
        "--peer",
        "http://localhost:3333/gun",
        "--disableValidation",
        "--redis",
        "--leech",
        "--tabulate"
      ]
    },
    {
      "name": "spaces",
      "exec_mode": "cluster",
      "instances": 1,
      "script": "./server.js",
      "env": { "NODE_ENV": "production" },
      "args": [
        "--peer",
        "http://localhost:3333/gun",
        "--disableValidation",
        "--redis",
        "--leech",
        "--spaces"
      ]
    }
  ]
}
